{% extends '@bolt/_partials/fields/_base.html.twig' %}

{% block field %}
    {% if config is defined %}
        {% set apikey = config.get('general/google_api_key')|default(null) %}
    {% endif %}

    {% if apikey != null %}
      {{ apikey }}
    {% else %}
        null
    {% endif %}

    <div class="form-group editor--group">
        <label for="field-geolocation">{{ 'geolocation.label_geolocation'|trans }}</label>
        <div class="editor__geolocation">
            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        <label>{{ 'geolocation.label_address'|trans }}</label>
                        <input class="form-control address" name="geolocation[address]" placeholder="{{ 'geolocation.placeholder_address'|trans }}" type="text" value="">
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="form-inline">
                                <div class="col-6">
                                    <label class="justify-content-start">{{ 'geolocation.label_lat'|trans }}</label>
                                    <input class="form-control" name="geolocation[latitude]" readonly="" step="any" type="number" value="">
                                </div>
                                <div class="col-6">
                                    <label class="justify-content-start">{{ 'geolocation.label_long'|trans }}</label>
                                    <input class="form-control" name="geolocation[longitude]" readonly="" step="any" type="number" value="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{ 'geolocation.label_address_matched'|trans }}</label>
                        <input class="form-control" name="geolocation[formatted_address]" placeholder="â€”" readonly="" type="text" value="">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="header">{{ 'geolocation.label_marker'|trans }}</label>
                        <button type="button" class="btn btn-sm btn-default expand justify-content-end"><i class="fa fa-expand"></i></button>
                        <button type="button" class="btn btn-sm btn-default compress"><i class="fa fa-compress "></i></button>
                        <div class="mapholder" style="position: relative; overflow: hidden;">
                            <a class="editor__image--preview-image" href="/thumbs/kitten.jpg?w=1200&amp;h=1200&amp;s=1e1ae532b569d01e17644e1c31b12fe9" style="background-image: url(&quot;/thumbs/kitten.jpg?w=1200&amp;h=1200&amp;s=1e1ae532b569d01e17644e1c31b12fe9&quot;);"></a>
                        </div>
                        <div class="input-group custom-control custom-checkbox">
                            <input checked="" class="custom-control-input" type="checkbox" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">{{ 'geolocation.label_control'|trans }}</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
