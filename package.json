    "register-service-worker": "^1.6.2",
    "selectize": "^0.12.6",
    "simplemde": "^1.11.2",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.8.0",
    "terser": "^4.0.0",
    "tinycolor2": "^1.4.1",
    "vue": "^2.6.10",
    "vue-flatpickr-component": "^8.1.2",
